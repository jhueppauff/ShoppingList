    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm start",
            "preLaunchTask": "npm start",
            "request": "launch",
            "type": "node"
        },      
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "reAttach": true,
            "pathMappings": [{
                "url": "http://localhost:3000",
                "path": "${workspaceFolder}/WebClient"
            }],
            "webRoot": "${workspaceFolder}/WebClient"
        },
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "attach",
            "webRoot": "${workspaceFolder}/WebClient",
            "port": 6000
        }
    ]
}